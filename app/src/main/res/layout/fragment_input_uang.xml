<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.InputUangFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/arrowleft" />

        <TextView
            android:id="@+id/custom_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:text="Uang Masuk"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="20sp"
            android:text="Simpan"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:textSize="18sp"

            />


    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/filledTextField"

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="32dp"
                android:hint="Masuk ke"
                android:textColorHint="#6A6868"
                app:boxStrokeColor="@color/white"
                app:boxStrokeWidth="0dp"
                app:hintTextColor="@color/black">

                <!--this is the actual edit text which takes the input-->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ETmasuk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginHorizontal="32dp"
                android:background="#635B5B" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/asal"

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="32dp"
                android:hint="Dari"
                android:textColorHint="#6A6868"
                app:boxStrokeColor="@color/white"
                app:boxStrokeWidth="0dp"
                app:hintTextColor="@color/black">

                <!--this is the actual edit text which takes the input-->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ETasal"
                    android:layout_width="match_parent"
                    app:hintTextColor="@color/black"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginHorizontal="32dp"
                android:background="#635B5B" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/jumlah"

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="32dp"
                android:hint="Jumlah"
                android:textColorHint="#6A6868"
                app:boxStrokeColor="@color/white"
                app:boxStrokeWidth="0dp"
                app:hintTextColor="@color/black">

                <!--this is the actual edit text which takes the input-->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ETjumlah"
                    android:layout_width="match_parent"
                    app:hintTextColor="@color/black"
                    android:inputType="number"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginHorizontal="32dp"
                android:background="#635B5B" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/keterangan"

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="32dp"
                android:hint="Keterangan"
                android:textColorHint="#6A6868"
                app:boxStrokeColor="@color/white"
                app:boxStrokeWidth="0dp"
                app:hintTextColor="@color/black">

                <!--this is the actual edit text which takes the input-->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ETketerangan"
                    android:layout_width="match_parent"
                    app:hintTextColor="@color/black"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginHorizontal="32dp"
                android:background="#635B5B" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="32dp"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/jenis"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:hint="Jenis"
                    android:textColorHint="#6A6868"
                    app:boxStrokeColor="@color/white"
                    app:boxStrokeWidth="0dp"
                    app:hintTextColor="@color/black">

                    <!--this is the actual edit text which takes the input-->
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ETJenis"
                        android:layout_width="match_parent"
                        app:hintTextColor="@color/black"
                        android:layout_height="wrap_content"
                        android:focusable="false" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/lebihtau"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Lebih Tau"
                    android:textColor="#4CAF50"
                    android:textSize="18sp"
                    android:textStyle="bold"

                    />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginHorizontal="32dp"
                android:background="#635B5B" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32sp"
                android:layout_marginVertical="20sp"
                app:hintTextColor="@color/black"
                android:text="Foto/Bukti Transfer/Nota/Kwitansi" />

            <TextView
                android:id="@+id/TVfoto"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:layout_marginHorizontal="32sp"
                android:background="#E3E3E3"
                android:gravity="center"
                android:text="Foto"
                android:textColor="#4CAF50" />

            <LinearLayout
                android:id="@+id/linfoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:visibility="gone"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView

                    android:id="@+id/ImgFoto"
                    android:layout_width="120sp"
                    android:layout_height="130sp"
                    android:layout_marginRight="30dp"
                    android:background="#E3E3E3"
                    android:gravity="center"
                    android:text="Foto"
                    android:textColor="#4CAF50"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/ubah"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_marginRight="20sp"
                    android:gravity="center"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Ubah "
                    android:textColor="#4CAF50"
                    android:textSize="18sp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="15dp"
                    android:background="#8E8E8E"
                    app:layout_constraintBottom_toBottomOf="@+id/ubah"
                    app:layout_constraintEnd_toStartOf="@+id/ubah"
                    app:layout_constraintTop_toTopOf="@+id/ubah" />

                <TextView
                    android:id="@+id/hapus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_marginEnd="32dp"
                    android:gravity="center"
                    android:text="Hapus "
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#E91E63"
                    android:textSize="18sp"

                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.622" />

            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>